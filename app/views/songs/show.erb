<% if @created %>
  <h3><%= @song.name %></h3>
  "Successfully created song."</br>
<% end %>

<% if @updated %>
  <h3><%= @song.name %></h3>
  <h3><%= @song.artist.name %></h3>
  "Successfully updated song."</br>
<% end %>

<h3>Artist Name:
  <a href="/artists/<%= @song.artist.slug %>">
    <%= @song.artist.name %>
  </a>
</h3>
<ul>
    <% @song.genres.each do |genre| %>
      <li>
        <a href="/genres/<%= genre.slug %>">
          <%= genre.name %>
        </a>
      </li>
    <% end %>
  </ul>